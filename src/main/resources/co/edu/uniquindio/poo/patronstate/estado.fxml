<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.patronstate.ViewController.EstadoViewController"
            prefWidth="714" prefHeight="506"
            style="-fx-background-color: linear-gradient(to bottom right, #f9f9f9, #e6f0ff);">

    <children>
        <VBox layoutX="20" layoutY="14" spacing="15" prefWidth="674">

            <!-- Encabezado -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="botonVolver" text="â† Volver" onAction="#onVolver"
                        style="-fx-background-color: #8888ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
                <Label text="Estado de Pedidos"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />
            </HBox>

            <!-- Tabla de pedidos -->
            <TableView fx:id="tablaPedidos" prefHeight="360" prefWidth="674"
                       style="-fx-border-color: #cccccc; -fx-border-radius: 8; -fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="columnaId" text="ID Pedido" prefWidth="200"/>
                    <TableColumn fx:id="columnaEstado" text="Estado" prefWidth="200"/>
                    <TableColumn fx:id="columnaTotal" text="Total" prefWidth="274"/>
                </columns>
            </TableView>

            <!-- Botones de acciÃ³n -->
            <HBox spacing="15" alignment="CENTER">

                <!-- ðŸ”¹ Nuevo botÃ³n PAGAR -->
                <Button fx:id="botonPagar" text="Pagar" onAction="#estadoPagado"
                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                        prefWidth="100" prefHeight="30"/>

                <Button fx:id="botonEnviado" text="Enviado" onAction="#estadoEnviado"
                        style="-fx-background-color: #0B57D0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                        prefWidth="100" prefHeight="30"/>

                <Button fx:id="botonEntregado" text="Entregado" onAction="#estadoEntregado"
                        style="-fx-background-color: #0B57D0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                        prefWidth="100" prefHeight="30"/>

                <Button fx:id="botonCancelar" text="Cancelar" onAction="#cancelarPedido"
                        style="-fx-background-color: #FF4C4C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                        prefWidth="100" prefHeight="30"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
